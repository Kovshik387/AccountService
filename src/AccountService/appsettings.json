{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "CorsOptions": {
    "AllowedOrigins": "*",
    "NamePolicy": "AppCorsPolicy"
  },
  "IdentityOptions": {
    "Url": "http://localhost:8010",
    "Realm": "AccountRealm",
    "TypeAuthorization" : "Bearer"
  },
  "DbOptions": {
    "ConnectionString": "Host=postgres;Port=5432;Username=postgres;Password=SuperStrongPassword",
    "TestConnectionString": ""
  },
  "HangFireOptions": {
    "CronExpression": "0 4 * * *"
  },
  "RabbitMqOptions": {
    "Host":"rabbitmq",
    "Port": 5672,
    "UserName": "user",
    "Password": "user",
    "VHost": "default" 
  },
  "LoggerOptions": {
    "Level": "Information",
    "WriteToConsole": true,
    "WriteToFile": false,
    "FileRollingInterval": "Hour",
    "FileRollingSize": "5242880"
  },
  "RouteOptions": {
    "AccountOpenEventRoute": "account.opened",
    "AccrueEventRoute": "account.accrue",
    "DebitEventRoute": "money.debit",
    "CreditEventRoute": "money.credit",
    "TransferEventRoute": "money.transfer.completed",
    "ClientBlockEventRoute": "account.antifraud",
    "ClientUnblockEventRoute": "account.antifraud"
  },
  "HealthOptions": {
    "OutboxWarnThreshold": 100,
    "RabbitMqTimeoutMs": 1500
  }
}
